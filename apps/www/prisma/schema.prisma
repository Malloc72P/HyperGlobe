generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

// =================================================================================
// Next Auth 표준 스키마
// - User, Account, Session
// =================================================================================
model User {
    id String @id @default(auto()) @map("_id") @db.ObjectId

    email         String    @unique
    name          String?
    emailVerified DateTime?
    image         String?

    accounts Account[]
    sessions Session[]

    // 패스워드 로그인에 대한 정보. 해당 정보가 없다면 비밀번호 로그인 불가
    credentials UserCredentials?

    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    datasets  Dataset[]
}

model Account {
    id String @id @default(auto()) @map("_id") @db.ObjectId

    userId            String  @db.ObjectId
    type              String
    provider          String
    providerAccountId String
    refresh_token     String?
    access_token      String?
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String?
    session_state     String?
    user              User    @relation(fields: [userId], references: [id])

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Session {
    id String @id @default(auto()) @map("_id") @db.ObjectId

    sessionToken String   @unique
    userId       String   @db.ObjectId
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id])

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

// =================================================================================
// Next Auth *비* 표준 스키마
// - UserCredentials: 비밀번호 로그인을 위한 모델.
// - UserCredentials은 User와 1대1관계를 형성.
// - 유저가 패스워드 로그인을 사용하지 않을 수 있으므로 해당 모델은 비어있을 수 있음
// - 사용자 정보가 제거되면 비밀번호 정보도 제거되어야 함
// =================================================================================

model UserCredentials {
    id String @id @default(auto()) @map("_id") @db.ObjectId

    // 사용자 패스워드
    password String

    userId String @unique @db.ObjectId
    user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

// =================================================================================
// 데이터셋 스키마
// - 작업은 데이터셋 단위로 진행된다.
// - 데이터셋은 하나의 시리즈로 구성된다.
// =================================================================================
model Dataset {
    id String @id @default(auto()) @map("_id") @db.ObjectId

    // 데이터셋 이름
    title String @default("새로운 데이터셋")

    // 데이터셋 설명
    description String @default("")

    // 데이터셋 소유자
    ownerId String @db.ObjectId
    owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)

    // 메시지 생성,수정 시간
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
