{
  "name": "@hyperglobe/core",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/hyperglobe.es.js",
      "types": "./dist/hyperglobe.es.d.ts"
    },
    "./hyperglobe.css": "./dist/hyperglobe.css"
  },
  "scripts": {
    "DEV": "---------------------------------------------------------------------------",
    "predev": "tsx ./scripts/prepare-dev.js",
    "dev": "storybook dev -p 6006",
    "BUILD": "-------------------------------------------------------------------------",
    "prebuild": "tsx ./scripts/prepare-build.js",
    "build": "tsc && vite build",
    "postbuild": "tsx ./scripts/copy-bundle.js",
    "BUILD:DOCS": "--------------------------------------------------------------------",
    "prebuild:docs": "pnpm build",
    "build:docs": "storybook build",
    "TEST": "--------------------------------------------------------------------------",
    "test": "pnpm test:unit",
    "test:unit": "vitest run",
    "check-types": "tsc --noEmit",
    "ETC": "---------------------------------------------------------------------------",
    "lint": "eslint .",
    "RELEASE": "-----------------------------------------------------------------------",
    "release": "pnpm run build && cd ./publish/.npm && npm publish --access public"
  },
  "dependencies": {
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.4.0",
    "lodash-es": "^4.17.22",
    "rbush": "^4.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "three": "^0.180.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "@babel/types": "^7.28.5",
    "@hyperglobe/eslint-config": "workspace:*",
    "@hyperglobe/interfaces": "workspace:*",
    "@hyperglobe/maps": "workspace:*",
    "@hyperglobe/tools": "workspace:*",
    "@hyperglobe/typescript-config": "workspace:*",
    "@malloc72p/hyperglobe-maps": "^0.0.5",
    "@storybook/addon-docs": "^9.1.13",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^9.1.13",
    "@storybook/react-vite": "^9.1.13",
    "@types/geojson": "^7946.0.8",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.6.0",
    "@types/rbush": "^4.0.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@types/three": "^0.180.0",
    "@vercel/analytics": "^1.6.1",
    "@vitejs/plugin-react": "^5.0.4",
    "globals": "^16.4.0",
    "remark-gfm": "^4.0.1",
    "storybook": "^9.1.13",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.1"
  }
}
